# misc.
super + p
  $LAUNCHER
super + Return
  $TERMINAL
super + ctrl + b
  $BROWSER
super + ctrl + l
  $SCREENLOCK
super + ctrl + c
  dmenu_ssh
super + ctrl + o
  dmenu_vim_edit --dirmode --embed --prompt "open project :" $SCM

# system audio keybindings.
super + {_, ctrl +} equal
  pactl set-sink-volume @DEFAULT_SINK@ +{1,5}%
super + {_, ctrl +} minus
  pactl set-sink-volume @DEFAULT_SINK@ -{1,5}%
super + ctrl + m
  pactl set-sink-mute @DEFAULT_SINK@ toggle

# shutdown, reboot.
super + ctrl + s
  dmenu_shutdown

