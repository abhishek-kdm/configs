# vim: filetype=config

[global]
  font                = "FiraCode NF 10"
  plain_text          = no
  markup              = yes
  format              = "<b>%s</b>\n%b"
  indicate_hidden     = yes
  alignment           = center
  bounce_freq         = 0
  word_wrap           = yes
  ignore_newline      = no
  stack_duplicates    = yes
  geometry            = "300x50-40+40"
  corner_radius       = 3
  shrink              = yes
  transparency        = 3
  idle_threshold      = 0
  follow              = none
  sticky_history      = yes
  history_length      = 15
  show_indicators     = no
  line_height         = 8
  separator_height    = 1
  separator_color     = "#aeaeae"
  padding             = 8
  horizontal_padding  = 15

[shortcuts]
  close       = ctrl+space
  close_all   = ctrl+shift+space
  history     = ctrl+grave
  context     = ctrl+shift+period

[frame]
  width = 1
  color = "#252525"

[urgency_low]
    background = "#dddddd"
    foreground = "#090909"

[urgency_normal]
    background  = "#22709f"
    foreground  = "#ffffff"
    frame_color = "#ffffff"

[urgency_critical]
