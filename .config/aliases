# vim: filetype=sh

alias ls="exa --git --icons"
alias la="ls -aa"
alias l1="ls -aa1"
alias rm="rm -riv"
alias server="python3 -m http.server"
alias mx="tmux"
alias vi="nvim"
alias vis="vim -u $HOME/.vim/smallrc"

alias open="dir -Al $SCM | egrep '^d' | awk '{print \$9}' | fzf | xargs -i nvim --cmd 'cd $SCM/{}' $SCM/{}"

