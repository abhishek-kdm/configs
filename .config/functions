# vim: ft=sh

open() {
  ls -Al "$SCM" \
    | egrep '^d' \
    | awk '{print $9}' \
    | fzf \
    | xargs -i $EDITOR --cmd "cd $SCM/{}" "$SCM/{}"
}

conf() {
  tree -iafI "\.git" --noreport "$SCM/dotfiles/" \
    | cut -d\  -f1 \
    | sed -rn 's/.*dotfiles\/(.*)$/\1/p' \
    | fzf \
    | xargs -i $EDITOR "$SCM"/dotfiles/{}
}

