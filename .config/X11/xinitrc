#!/bin/sh

[ -f "$XDG_CONFIG_HOME/X11/Xresources" ] &&
  xrdb -load "$XDG_CONFIG_HOME/X11/Xresources"

xsetroot -cursor_name left_ptr &  # good'ol left arrow.
xset r rate 300 50 &              # increase x rate.

xautolock &                       # auto lock (configs in Xresources).
dunst &                           # notification daemon.
sxhkd &                           # hotkey daemon.

if [ -d "$XDG_CONFIG_HOME"/X11/xinitrc.d ]; then
  for file in "$XDG_CONFIG_HOME"/X11/xinitrc.d/*.sh; do
    [ -f "$file" ] && . $file
  done
  unset file
fi

case "$1" in
  "xmonad") launch_xmonad ;;
  "dwm")    launch_dwm    ;;
  *)        exit          ;;
esac

# vim: ft=sh
